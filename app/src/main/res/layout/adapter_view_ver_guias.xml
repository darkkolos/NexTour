<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cinzentoMuitoClaro"
    android:divider="@null"
    android:dividerHeight="0dp"
    android:orientation="vertical"
    android:padding="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:background="#fff"
        android:elevation="40dp"
        android:orientation="vertical"
        android:outlineAmbientShadowColor="@color/azulClaro"
        android:outlineSpotShadowColor="@color/azulClaro">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp">

            <ImageView
                android:id="@+id/imagem_principal_guia"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />
        </LinearLayout>


        <TextView
            android:id="@+id/titulo_guia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:padding="4dp"
            android:text="TÃ­tulo"
            android:textColor="@color/azulEscuro"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:gravity="center_vertical">

            <GridLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:padding="5dp"
                android:rowCount="1"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:weightSum="4"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:src="@drawable/estrela" />

                    <TextView
                        android:id="@+id/classificacao_guia"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:padding="3dp"
                        android:text="4,7/5"
                        android:textAlignment="center"
                        android:textColor="@color/azulClaro"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:weightSum="4"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:src="@drawable/relogiocinzento" />

                    <TextView
                        android:id="@+id/duracao_guia"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:padding="3dp"
                        android:text="90 min"
                        android:textAlignment="center"
                        android:textColor="@color/cinzentoEscuro"
                        android:textSize="15sp" />
                </LinearLayout>
            </GridLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:weightSum="4"
                android:padding="5dp">

                <TextView
                    android:id="@+id/distrito"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="3"
                    android:padding="3dp"
                    android:text="Distrito"
                    android:textAlignment="textEnd"
                    android:textColor="@color/azulClaro"
                    android:textSize="20sp" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:src="@drawable/pinpoint" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>