<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dropdown_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cinzentoMuitoClaro"
    tools:context=".PaginaInicial">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cinzentoMuitoClaro"
        android:orientation="vertical">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/navigationView"
            android:background="@color/cinzentoMuitoClaro"
            tools:context=".PaginaMapa" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/relative_layout_1"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/cinzentoMuitoClaro"
                android:elevation="10dp">

                <ImageView
                    android:id="@+id/pesquisar"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/pesquisar" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/pesquisar"
                    android:textColor="@color/cinzentoEscuro"
                    android:textColorHint="@color/cinzentoEscuro">

                    <AutoCompleteTextView
                        android:id="@+id/input_pequisa"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:ems="9"
                        android:hint="Endereço de pesquisa"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:maxLength="50"
                        android:textColor="@color/cinzentoEscuro"
                        android:textColorHint="@color/cinzentoEscuro"
                        android:textSize="20sp" />
                </com.google.android.material.textfield.TextInputLayout>

            </RelativeLayout>
        </LinearLayout>


        <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/navigationView">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/bottom_sheet_guia_turistico"
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:background="@color/cinzentoMuitoClaro"
                app:behavior_hideable="true"
                app:behavior_peekHeight="100dp"
                app:layout_behavior="@string/bottom_sheet_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/contentor_cima_bottom_sheet"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <ImageView
                            android:id="@+id/imagem_principal_pequena"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="40" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="60"
                            android:orientation="vertical"
                            android:scaleType="fitXY">

                            <TextView
                                android:id="@+id/titulo_guia_turistico_pequeno"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:padding="5dp"
                                android:text="Título"
                                android:textColor="@color/azulClaro"
                                android:textSize="20sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2"
                                android:layout_marginTop="10dp">

                                <ImageView
                                    android:id="@+id/botao_stop_pequeno"
                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/stop" />

                                <ImageView
                                    android:id="@+id/botao_start_pause_pequeno"
                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/start" />

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <TextView
                            android:id="@+id/titulo_guia_turistico"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="90"
                            android:text="Título"
                            android:textColor="@color/azulClaro"
                            android:textSize="25sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            android:layout_weight="90"
                            android:background="@color/cinzentoEscuro" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="90"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/imagem_principal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            android:layout_weight="90"
                            android:background="@color/cinzentoEscuro" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="90"
                            android:weightSum="2">

                            <ImageView
                                android:id="@+id/botao_stop"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_weight="1"
                                android:src="@drawable/stop" />

                            <ImageView
                                android:id="@+id/botao_start_pause"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_weight="1"
                                android:src="@drawable/start" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/botao_visitar_guia"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/botao_redondo"
                            android:text="Visitar guia" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            android:layout_weight="90"
                            android:background="@color/cinzentoEscuro" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <TextView
                            android:id="@+id/descricao_guia_turistico"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="80"
                            android:text="Descrição"
                            android:textAlignment="center"
                            android:textColor="@color/cinzentoEscuro"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>


            </androidx.core.widget.NestedScrollView>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/cinzentoMuitoClaro"
            android:outlineSpotShadowColor="@color/azulClaro"
            app:itemBackground="@color/azulClaro"
            app:itemIconTint="@animator/selector"
            app:itemTextColor="#ffffff"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/menu_navegacao_baixo" />

    </RelativeLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/menu_cair"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/cinzentoClaro"
        app:itemIconTint="@color/azulEscuro"
        app:itemTextColor="@color/azulEscuro"
        app:menu="@menu/menu_navegacao" />


</androidx.drawerlayout.widget.DrawerLayout>