<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:weightSum="100">

            <TextView
                android:id="@+id/titulo_guia"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:layout_weight="70"
                android:text="Classificar guia"
                android:textColor="@color/azulEscuro"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:gravity="center"
            android:layout_marginTop="50dp">

            <ImageView
                android:id="@+id/estrela_1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="15"
                android:src="@drawable/estrela_cinzenta"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="5"/>

            <ImageView
                android:id="@+id/estrela_2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="15"
                android:src="@drawable/estrela_cinzenta"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="5"/>
            <ImageView
                android:id="@+id/estrela_3"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="15"
                android:src="@drawable/estrela_cinzenta"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="5"/>
            <ImageView
                android:id="@+id/estrela_4"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="15"
                android:src="@drawable/estrela_cinzenta"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="5"/>
            <ImageView
                android:id="@+id/estrela_5"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="15"
                android:src="@drawable/estrela_cinzenta"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>