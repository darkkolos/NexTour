<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cinzentoMuitoClaro"
    android:padding="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="100">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fotografia_perfil"
                android:layout_width="0dp"
                android:layout_height="190dp"
                android:layout_weight="80"
                android:src="@mipmap/ic_launcher" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:weightSum="100">

            <ImageView
                android:id="@+id/editar_nome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                app:srcCompat="@android:drawable/ic_menu_edit" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/nome_utilizador"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/fotografia_perfil"
                android:layout_weight="70"
                android:text="Nome:"
                android:textColor="@color/azulClaro"
                android:textSize="20dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="15" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/email_utilizador"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/fotografia_perfil"
                android:layout_weight="70"
                android:text="Email:"
                android:textColor="@color/azulClaro"
                android:textSize="20dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:weightSum="100">

            <ImageView
                android:id="@+id/editar_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                app:srcCompat="@android:drawable/ic_menu_edit" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/password_utilizador"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/fotografia_perfil"
                android:layout_weight="70"
                android:text="Password:"
                android:textColor="@color/azulClaro"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>