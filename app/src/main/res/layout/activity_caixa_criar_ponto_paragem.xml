<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dropdown_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cinzentoMuitoClaro"
    tools:context=".CaixaCriarPontoParagem">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/ScrollView01"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/layout_baixo">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/cinzentoEscuro"
                        android:textColorHint="@color/cinzentoEscuro">

                        <EditText
                            android:id="@+id/tituloInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="12"
                            android:hint="Título do ponto de paragem"
                            android:inputType="text"
                            android:maxLength="30"
                            android:textColor="@color/cinzentoEscuro"
                            android:textColorHint="@color/cinzentoEscuro"
                            android:textSize="20sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/localidadeInput"
                            android:layout_width="200dp"
                            android:layout_height="60dp"
                            android:gravity="center"
                            android:text="Escolher local ->"
                            android:textAlignment="center"
                            android:textColor="@color/cinzentoEscuro"
                            android:textSize="15sp" />

                        <ImageButton
                            android:id="@+id/localidadeBotao"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:src="@android:drawable/ic_dialog_map" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/containerFotos"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:orientation="horizontal"></LinearLayout>


                    <TextView
                        android:id="@+id/adicionarFotoString"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:contextClickable="true"
                        android:text="Adicionar fotografia"
                        android:textAlignment="center"
                        android:textColor="@color/azulClaro"
                        android:textSize="15sp" />


                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/audioBotao"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/icone_mic" />


                        <LinearLayout
                            android:id="@+id/containerDescricao"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/cinzentoEscuro"
                                android:textColorHint="@color/cinzentoEscuro">

                                <EditText
                                    android:id="@+id/descricao_input"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ems="11"
                                    android:gravity="start|top"
                                    android:hint="Descrição"
                                    android:inputType="textMultiLine"
                                    android:maxLength="1000"
                                    android:textColor="@color/cinzentoEscuro"
                                    android:textColorHint="@color/cinzentoEscuro"
                                    android:textSize="15sp" />
                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/layout_baixo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:fitsSystemWindows="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="false"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5" />

                <Button
                    android:id="@+id/cancelar_botao"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:background="@drawable/botao_redondo"
                    android:text="Cancelar" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10" />

                <Button
                    android:id="@+id/adicionar_botao"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:background="@drawable/botao_redondo"
                    android:text="Continuar" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/menu_cair"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/cinzentoMuitoClaro"
        app:itemIconTint="@color/azulEscuro"
        app:itemTextColor="@color/azulEscuro"
        app:menu="@menu/menu_navegacao" />


</androidx.drawerlayout.widget.DrawerLayout>