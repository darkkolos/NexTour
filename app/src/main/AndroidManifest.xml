<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nextour">
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".PaginaTermos"
            android:label="Termos de uso"></activity>
        <activity
            android:name=".PaginaFavoritos"
            android:label="Meus Favoritos"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name=".PaginaMapa"
            android:label="Mapa"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name=".PaginaPesquisar"
            android:label="Pesquisar Guias"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name=".PaginaVerImagens"
            android:theme="@style/HiddenTitleTheme" />
        <activity
            android:name=".PaginaVerGuia"
            android:label="Guia Turístico"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name=".PaginaMeusGuias"
            android:label="Meus Guias"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name=".PaginaVerLocais"
            android:label="Reproduzir Guia"
            android:windowSoftInputMode="adjustPan|stateHidden" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".PaginaEscolherLocalidade"
            android:label="Escolher localidade"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name=".CaixaCriarPontoParagem"
            android:label="Criar ponto de paragem"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name=".CaixaCriarAudio"
            android:label="Adicionar áudio"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name=".PaginaCriarGuia"
            android:label="Criar Guia"
            android:noHistory="false"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name=".PaginaAjuda"
            android:label="Ajuda"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name=".PaginaPoliticas"
            android:label="Políticas de privacidade"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name=".PaginaPerfil"
            android:label="Meu Perfil"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name=".PaginaInicial"
            android:label="NexTour"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PaginaLogin"
            android:label="@string/title_activity_pagina_login"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name=".PaginaRegistar"
            android:label="Registar"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan|stateHidden" />
    </application>

</manifest>